<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- VISUAL COLORS -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link"></link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="0.196 0 0.075" rpy="0 0 0"/> <!-- Offset the chassis slightly up by 7.5cm-->
    </joint>

    <link name="chassis_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.392 0.29 0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.392 0.29 0.06"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.392" y="0.29" z="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- POLE LINKS -->

    <joint name="left_pole_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_pole_link"/>
        <origin xyz="0 0.105 0.04" rpy="0 0 0"/>
    </joint>

    <link name="left_pole_link">
        <visual>
            <origin xyz="0 0 0.335" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.67" radius="0.00795"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.335" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.67" radius="0.00795"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.02" length="0.67" radius="0.00795">
            <origin xyz="0 0 0.335" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_pole_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_pole_link"/>
        <origin xyz="0 -0.105 0.04" rpy="0 0 0"/>
    </joint>

    <link name="right_pole_link">
        <visual>
            <origin xyz="0 0 0.335" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.67" radius="0.00795"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.335" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.67" radius="0.00795"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.02" length="0.67" radius="0.00795">
            <origin xyz="0 0 0.335" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- MOTOR WHEEL LINKS -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0.326 0.1685 0.034" rpy="0 0 0"/> <!-- Rotate wheel -->
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel_link">
        <visual>
            <origin rpy="1.57079632679 0 0"/>
            <geometry>
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="1.57079632679 0 0"/>
            <geometry>
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.02" radius="0.034" length="0.026">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0.326 -0.1685 0.034" rpy="0 0 0"/> <!-- Rotate wheel -->
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_wheel_link">
        <visual>
            <origin rpy="1.57079632679 0 0"/>
            <geometry>
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="1.57079632679 0 0"/>
            <geometry>
                <cylinder radius="0.034" length="0.026"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.02" radius="0.034" length="0.026">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEELS LINK -->

    <joint name="caster_left_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_left_wheel_link"/>
        <origin xyz="0 0.105 0.02" rpy="0 0 0"/>
    </joint>

    <link name="caster_left_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="caster_right_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_right_wheel_link"/>
        <origin xyz="0 -0.105 0.02" rpy="0 0 0"/>
    </joint>

    <link name="caster_right_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- LIDAR LINK -->

    <joint name="lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="0.196 0 0.135" rpy="0 0 0"/>
    </joint>

    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.025"/>
            </geometry>
            <material name="red"/>
        </visual>
        <xacro:inertial_cylinder mass="0.140" length="0.025" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- GAZEBO FRICTION -->

    <gazebo reference="left_wheel_link">
        <mu1>1.0</mu1>      <!-- longitudinal friction -->
        <mu2>1.0</mu2>      <!-- lateral friction -->
        <kp>1000000.0</kp>  <!-- contact stiffness -->
        <kd>1.0</kd>        <!-- damping -->
    </gazebo>

    <gazebo reference="right_wheel_link">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <gazebo reference="caster_left_wheel_link">
        <mu1>0.001</mu1>
        <mu2>0.001</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <gazebo reference="caster_right_wheel_link">
        <mu1>0.001</mu1>
        <mu2>0.001</mu2>
        <kp>1000000.0</kp>
        <kd>1.0</kd>
    </gazebo>

    <!-- GAZEBO PLUGINS -->

    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>

    <gazebo>
        <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
            <parameters>$(find chassis)/config/my_controllers.yaml</parameters>
        </plugin>
    </gazebo>

    <!-- GAZEBO LIDAR REFERENCE -->

    <gazebo reference="lidar_link">
        <sensor name="lidar_sensor" type="gpu_lidar">
            <pose>0 0 0 0 0 0</pose>

            <always_on>true</always_on>
            <update_rate>10</update_rate>
            <visualize>true</visualize>

            <ray>
                <scan>
                    <horizontal>
                    <samples>360</samples>
                    <resolution>1</resolution>
                    <min_angle>-3.14159</min_angle>
                    <max_angle>3.14159</max_angle>
                    </horizontal>
                </scan>

                <range>
                    <min>0.3</min>
                    <max>12.0</max>
                </range>
            </ray>
        </sensor>
    </gazebo>

    <!-- ROS CONTROL -->

